<resources>

    <style name="Widget.Theme.CasioPhake.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="nav_button_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="keyboard" parent="Widget.MaterialComponents.Button">
        <item name="android:drawable">@drawable/keyboard_draw</item>
        <item name="android:backgroundTint">#253557</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>

        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:padding">1dp</item>

    </style>

    <style name="delete" >
        <item name="background">@drawable/corner_background</item>
        <item name="android:drawable">@drawable/keyboard_draw</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="cornerRadius">20dp</item>
        <item name="android:padding">1dp</item>
    </style>
</resources>